@model Hobby

<h1 class="center">Edit a Hobby</h1>

<form asp-action="UpdateHobby" asp-route-HobbyId="@Model.HobbyId" controller="Home" method="POST">
    
    <label asp-for="Name"></label><br>
    <span class="error" asp-validation-for="Name"></span>
    <input class="form-control" asp-for="Name" type="text">

    <label asp-for="Description"></label><br>
    <span class="error" asp-validation-for="Description"></span>
    <textarea asp-for="Description" cols="150" rows="5"></textarea>

    <br><br>
    <button>Update</button>
</form>